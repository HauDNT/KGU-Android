<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vòng ngoài cùng -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="@android:color/black" />
        </shape>
    </item>
    <!-- Vòng thứ hai bên trong, tạo khoảng cách -->
    <item
        android:top="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@android:color/black" />
        </shape>
    </item>
</layer-list>
