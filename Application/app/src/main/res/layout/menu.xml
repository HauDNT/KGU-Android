<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_register"
    android:orientation="vertical">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:iconifiedByDefault="false"
        app:queryHint="Tìm kiếm..." />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Get your food"
        android:textColor="#7E7E7E"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Delivered!"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- ViewPager2 for Posters -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp" />

    <!-- Popular Now Section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Pizza -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bogoc"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="58dp"
                    android:contentDescription="Pizza"
                    android:src="@drawable/pizza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Pizza"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_pizza"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Xem Thêm" />
            </LinearLayout>
            <!-- Burger -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bogoc"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Burger"
                    android:src="@drawable/burger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Burger"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_burger"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Xem Thêm" />
            </LinearLayout>
            <!-- Popcorn -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bogoc"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Popcorn"
                    android:src="@drawable/popcorn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Popcorn"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_popcorn"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Xem Thêm" />
            </LinearLayout>

            <!-- Drink -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bogoc"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="Drink"
                    android:src="@drawable/soda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Drink"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_drink"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text="Xem Thêm" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Phổ Biến Hiện Nay"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Bottom Navigation -->
    <ListView
        android:id="@+id/productListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" /> <!-- Thay đổi chiều cao thành 0dp và sử dụng layout_weight -->


</LinearLayout>