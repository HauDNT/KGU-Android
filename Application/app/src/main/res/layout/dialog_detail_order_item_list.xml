<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:orientation="horizontal"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/order_detail_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:textSize="13dp"
        android:text="Món ăn 1"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textAlignment="center"
        tools:ignore="RtlCompat"
        />

    <TextView
        android:id="@+id/order_detail_item_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textSize="13dp"
        android:text="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/order_detail_item_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="13dp"
        android:text="10.000"
        android:gravity="center_vertical"
        android:textAlignment="center"
        tools:ignore="RtlCompat"
        />

    <TextView
        android:id="@+id/order_detail_item_total_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_weight="1.5"
        android:textSize="13dp"
        android:text="10.000"
        android:textStyle="bold"
        android:textColor="@color/chip_stroke_selected_color"
        tools:ignore="RtlCompat"
        />

    <ImageView
        android:id="@+id/order_detail_item_btn_delete"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0.5"
        android:src="@drawable/ic_delete"/>
</LinearLayout>