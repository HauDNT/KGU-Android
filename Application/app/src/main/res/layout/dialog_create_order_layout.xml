<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="5dp"
    android:background="@drawable/dialog_background">

    <ImageView
        android:src="@drawable/ic_cart_item"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/dialog_create_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo đơn hàng mới"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên đơn hàng"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/dialog_create_order_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text_dialog"
        android:hint="Tên đơn hàng"
        android:textSize="16dp"
        android:paddingStart="10dp"
        android:scrollbarSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/dialog_create_order_description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text_dialog"
        android:hint="Mô tả đơn hàng"
        android:textSize="16dp"
        android:paddingStart="10dp"
        android:scrollbarSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian tạo"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingHorizontal="4dp"
        />

    <EditText
        android:id="@+id/dialog_create_order_created_at"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_edit_text_dialog"
        android:enabled="false"
        android:textSize="16dp"
        android:paddingStart="10dp"
        android:scrollbarSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="4dp"/>

    <Button
        android:id="@+id/dialog_create_order_btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="15dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_create_order_btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        app:cornerRadius="50dp"
        app:strokeColor="@color/grayCorner"
        app:strokeWidth="1dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        />
</LinearLayout>