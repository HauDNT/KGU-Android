<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="2dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/order_item_bound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_item_image"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/cart_item_image_desc"
            app:srcCompat="@drawable/ic_cart_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:text="Giỏ hàng 1"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/order_item_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:text="01/01/2025"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/order_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Đang xử lý"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/order_item_btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_remove" />
    </LinearLayout>
</androidx.cardview.widget.CardView>