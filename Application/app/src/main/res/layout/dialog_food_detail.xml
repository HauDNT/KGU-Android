<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dialog_food_image"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/dialog_food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên món ăn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dialog_food_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả món ăn"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dialog_food_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn giá: 0 VND"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/dialog_food_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Còn hàng"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black" />

</LinearLayout>
